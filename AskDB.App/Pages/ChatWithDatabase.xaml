<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="AskDB.App.Pages.ChatWithDatabase"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:AskDB.App.Pages"
    xmlns:controls="using:AskDB.App"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:controls1="using:CommunityToolkit.WinUI.UI.Controls" xmlns:view_models="using:AskDB.App.ViewModels"
    mc:Ignorable="d">

    <SplitView IsPaneOpen="False" x:Name="MainView" OpenPaneLength="640" PanePlacement="Right" DisplayMode="Inline" PaneBackground="{ThemeResource CardBackgroundFillColorSecondaryBrush}">
        <SplitView.Pane>
            <Grid Padding="8" RowSpacing="16">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <StackPanel Orientation="Horizontal" Padding="8,8,0,0" Spacing="8" Grid.Row="0">
                    <FontIcon Glyph="&#xE762;" />
                    <TextBlock Text="Progress" Style="{StaticResource SubtitleTextBlockStyle}"/>
                </StackPanel>
                <ListView Grid.Row="1" IsItemClickEnabled="False" CanDragItems="False" CanReorderItems="False" SelectionMode="None" ItemsSource="{x:Bind ProgressContents}">
                    <ListView.ItemTemplate>
                        <DataTemplate x:DataType="view_models:ProgressContent">
                            <StackPanel Margin="0,8" Spacing="8">
                                <controls1:MarkdownTextBlock 
                                    TextWrapping="WrapWholeWords" 
                                    Background="Transparent" 
                                    Text="{x:Bind Message}"
                                    CodePadding="12"
                                    InlineCodeBackground="{ThemeResource SystemFillColorCautionBackgroundBrush}"
                                    CodeBackground="{ThemeResource SolidBackgroundFillColorBaseAltBrush}"
                                    QuoteBackground="{ThemeResource SystemFillColorCriticalBackgroundBrush}"
                                    QuotePadding="6"/>
                                <StackPanel Spacing="8" Padding="12" Visibility="{x:Bind ActionButtonVisibility}" Background="{ThemeResource SystemFillColorAttentionBackgroundBrush}" CornerRadius="{StaticResource ControlCornerRadius}">
                                    <controls1:MarkdownTextBlock 
                                        TextWrapping="WrapWholeWords" 
                                        Background="Transparent" 
                                        Text="{x:Bind SqlCommand}"
                                        CodePadding="12"
                                        InlineCodeBackground="{ThemeResource SystemFillColorCautionBackgroundBrush}"
                                        CodeBackground="{ThemeResource SolidBackgroundFillColorBaseAltBrush}"/>     
                                    <controls1:DataGrid 
                                        Loaded="DataGrid_Loaded"
                                        IsReadOnly="True" 
                                        CanUserReorderColumns="True" 
                                        CanUserResizeColumns="True"
                                        CanUserSortColumns="True"
                                        IsDoubleTapEnabled="False"
                                        GridLinesVisibility="All"
                                        AutoGenerateColumns="False" 
                                        VerticalScrollBarVisibility="Auto"
                                        ClipboardCopyMode="IncludeHeader"
                                        BorderThickness="1"
                                        BorderBrush="{ThemeResource ControlElevationBorderBrush}"
                                        RowBackground="{ThemeResource SystemFillColorAttentionBackgroundBrush}"
                                        AlternatingRowBackground="{ThemeResource ControlAltFillColorTertiaryBrush}"
                                        MaxHeight="500"/>
                                    <StackPanel Orientation="Horizontal" Spacing="6" HorizontalAlignment="Right">
                                        <Button Padding="6" ToolTipService.ToolTip="Copy" ToolTipService.Placement="Left">
                                            <FontIcon Glyph="&#xE8C8;" FontSize="14"/>
                                        </Button>
                                        <Button Padding="6" ToolTipService.ToolTip="Export the data" ToolTipService.Placement="Left" Click="ExportButton_Click">
                                            <FontIcon Glyph="&#xE896;" FontSize="14"/>
                                        </Button>
                                    </StackPanel>
                                </StackPanel>
                            </StackPanel>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Grid>
        </SplitView.Pane>
        <Grid RowSpacing="8" Margin="0,0,8,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <Image Source="/Assets/icon.png" MaxHeight="200" Opacity="0.05"/>
            </Grid>
            <ListView Grid.Row="0" IsItemClickEnabled="False" CanDragItems="False" CanReorderItems="False" SelectionMode="None" ItemsSource="{x:Bind Messages}">
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="view_models:ChatMessage">
                        <StackPanel
                            Margin="0,12"
                            Padding="16,12"
                            Spacing="12"
                            CornerRadius="{StaticResource OverlayCornerRadius}"
                            Background="{ThemeResource SystemFillColorNeutralBackgroundBrush}"
                            HorizontalAlignment="{x:Bind Alignment}">
                            <controls1:MarkdownTextBlock 
                                TextWrapping="WrapWholeWords" 
                                Text="{x:Bind Content}" 
                                Background="Transparent" 
                                CodePadding="12"
                                InlineCodeBackground="{ThemeResource SystemFillColorCautionBackgroundBrush}"
                                QuoteBackground="{ThemeResource SystemFillColorCriticalBackgroundBrush}"
                                QuotePadding="6"/>
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <Grid Grid.Row="1" Background="Transparent" ColumnSpacing="8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBox MaxHeight="100" VerticalAlignment="Stretch" PlaceholderText="Enter your question here" AcceptsReturn="True" x:Name="QueryBox" KeyUp="QueryBox_KeyUp"/>
                <Button Grid.Column="1" Click="SendButton_Click" VerticalAlignment="Bottom" Style="{ThemeResource AccentButtonStyle}">
                    <FontIcon Glyph="&#xF4A5;" />
                </Button>
                <ToggleButton Grid.Column="2" VerticalAlignment="Bottom" ToolTipService.ToolTip="Show AskDb's progress" Click="ShowProgressToggle_Click">
                    <FontIcon Glyph="&#xE8A0;" />
                </ToggleButton>
            </Grid>
        </Grid>
    </SplitView>
</Page>
