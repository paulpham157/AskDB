<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="AskDB.App.Pages.ChatWithDatabase"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:AskDB.App.Pages"
    xmlns:controls="using:AskDB.App"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:controls1="using:CommunityToolkit.WinUI.UI.Controls" 
    xmlns:view_models="using:AskDB.App.View_Models" 
    xmlns:animations="using:CommunityToolkit.WinUI.Animations" xmlns:converters="using:AskDB.App.Converters"
    mc:Ignorable="d">

    <Page.Resources>
        <converters:DataTableToVisibilityConverter x:Key="DataTableToVisibilityConverter"/>
        <converters:EmptyStringToVisibilityConverter x:Key="EmptyStringToVisibilityConverter"/>
    </Page.Resources>

    <SplitView IsPaneOpen="False" x:Name="MainView" OpenPaneLength="640" PanePlacement="Right" DisplayMode="Inline" PaneBackground="{ThemeResource CardBackgroundFillColorSecondaryBrush}">
        <SplitView.Pane>
            <Grid Padding="8" RowSpacing="16">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <StackPanel Orientation="Horizontal" Padding="8,8,0,0" Spacing="8" Grid.Row="0">
                    <FontIcon Glyph="&#xE7BC;"/>
                    <TextBlock Text="Progress" Style="{StaticResource SubtitleTextBlockStyle}"/>
                </StackPanel>
                <ListView Grid.Row="1" IsItemClickEnabled="False" CanDragItems="False" CanReorderItems="False" SelectionMode="None" ItemsSource="{x:Bind ProgressContents}">
                    <ListView.ItemsPanel>
                        <ItemsPanelTemplate>
                            <ItemsStackPanel ItemsUpdatingScrollMode="KeepLastItemInView" VerticalAlignment="Bottom"/>
                        </ItemsPanelTemplate>
                    </ListView.ItemsPanel>

                    <ListView.ItemTemplate>
                        <DataTemplate x:DataType="view_models:ProgressContent">
                            <StackPanel Margin="0,8" Spacing="8">
                                <controls1:MarkdownTextBlock 
                                    TextWrapping="WrapWholeWords" 
                                    Background="Transparent" 
                                    CodePadding="12"
                                    QuotePadding="6"
                                    QuoteBackground="{ThemeResource SystemFillColorCriticalBackgroundBrush}"
                                    InlineCodeBackground="{ThemeResource SystemFillColorCautionBackgroundBrush}"
                                    CodeBackground="{ThemeResource SolidBackgroundFillColorBaseAltBrush}"
                                    Visibility="{x:Bind Message, Mode=OneWay, Converter={StaticResource EmptyStringToVisibilityConverter}}"
                                    Text="{x:Bind Message}"/>
                                <StackPanel 
                                    Spacing="4" 
                                    Visibility="{x:Bind Data, Mode=OneWay, Converter={StaticResource DataTableToVisibilityConverter}}" 
                                    Background="{ThemeResource SystemFillColorAttentionBackgroundBrush}" 
                                    CornerRadius="{StaticResource ControlCornerRadius}">
                                    <controls1:DataGrid 
                                        IsReadOnly="True" 
                                        CanUserReorderColumns="True" 
                                        CanUserResizeColumns="True"
                                        CanUserSortColumns="True"
                                        AutoGenerateColumns="True" 
                                        VerticalScrollBarVisibility="Auto"
                                        GridLinesVisibility="All"
                                        BorderThickness="1"
                                        MaxHeight="500"
                                        AutoGeneratingColumn="DataGrid_AutoGeneratingColumn"
                                        BorderBrush="{ThemeResource ControlElevationBorderBrush}"
                                        RowBackground="{ThemeResource SystemFillColorAttentionBackgroundBrush}"
                                        AlternatingRowBackground="{ThemeResource ControlAltFillColorTertiaryBrush}"
                                        ItemsSource="{x:Bind QueryResults}"/>

                                    <StackPanel Orientation="Horizontal" Spacing="6" HorizontalAlignment="Right" Padding="8">
                                        <Button Padding="6" ToolTipService.ToolTip="Copy the SQL command" ToolTipService.Placement="Left" Click="CopySqlButton_Click">
                                            <FontIcon Glyph="&#xE8C8;" FontSize="14"/>
                                        </Button>
                                        <Button Padding="6" ToolTipService.ToolTip="Export the data" ToolTipService.Placement="Left" Click="ExportButton_Click">
                                            <FontIcon Glyph="&#xE896;" FontSize="14"/>
                                        </Button>
                                    </StackPanel>
                                </StackPanel>
                            </StackPanel>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Grid>
        </SplitView.Pane>
        <Grid>
            <Grid RowSpacing="8" Margin="0,0,8,0" x:Name="MessageSpace" Padding="12">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid Grid.Row="0">
                    <Image Source="/Assets/icon.png" MaxHeight="200" Opacity="0.05"/>
                </Grid>
                <ListView Grid.Row="0" IsItemClickEnabled="False" CanDragItems="False" CanReorderItems="False" SelectionMode="None" ItemsSource="{x:Bind Messages}">
                    <ListView.ItemsPanel>
                        <ItemsPanelTemplate>
                            <ItemsStackPanel ItemsUpdatingScrollMode="KeepLastItemInView" VerticalAlignment="Bottom"/>
                        </ItemsPanelTemplate>
                    </ListView.ItemsPanel>
                    <ListView.ItemTemplate>
                        <DataTemplate x:DataType="view_models:ChatMessage">
                            <StackPanel
                                    Margin="0,12"
                                    Padding="16,12"
                                    Spacing="8"
                                    CornerRadius="{StaticResource OverlayCornerRadius}"
                                    Background="{ThemeResource SystemFillColorNeutralBackgroundBrush}"
                                    HorizontalAlignment="{x:Bind Alignment}">
                                <controls1:MarkdownTextBlock 
                                    TextWrapping="WrapWholeWords" 
                                    Text="{x:Bind Content}" 
                                    Background="Transparent" 
                                    CodePadding="12"
                                    InlineCodeBackground="{ThemeResource SystemFillColorCautionBackgroundBrush}"
                                    QuoteBackground="{ThemeResource SystemFillColorCriticalBackgroundBrush}"
                                    QuotePadding="6"/>
                                <Button Padding="6" ToolTipService.ToolTip="Copy" HorizontalAlignment="{x:Bind Alignment}">
                                    <FontIcon Glyph="&#xE8C8;" FontSize="14"/>
                                </Button>
                            </StackPanel>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
                <Grid Grid.Row="1" Background="Transparent" ColumnSpacing="8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBox MaxHeight="100" VerticalAlignment="Stretch" PlaceholderText="Enter your question here" AcceptsReturn="True" x:Name="QueryBox" KeyUp="QueryBox_KeyUp"/>
                    <Button Grid.Column="1" Click="SendButton_Click" VerticalAlignment="Bottom" Style="{ThemeResource AccentButtonStyle}">
                        <FontIcon Glyph="&#xF4A5;" />
                    </Button>
                    <ToggleButton Grid.Column="2" VerticalAlignment="Bottom" ToolTipService.ToolTip="Show AskDb's progress" Click="ShowProgressToggle_Click">
                        <FontIcon Glyph="&#xE7BC;" />
                    </ToggleButton>
                </Grid>
            </Grid>
            <Grid x:Name="LoadingOverlay" Background="{ThemeResource SystemFillColorAttentionBackgroundBrush}" CornerRadius="{StaticResource OverlayCornerRadius}" >
                <Grid.OpacityTransition>
                    <ScalarTransition />
                </Grid.OpacityTransition>
                <controls:LoadingControl x:Name="LoadingIndicator" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Grid>
        </Grid>
    </SplitView>
</Page>
